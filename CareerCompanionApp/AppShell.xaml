<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CareerCompanionApp.Views"
    x:Class="CareerCompanionApp.AppShell">

    <!-- Auth -->
    <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />

    <!-- Tabs after login -->
    <TabBar>
        <ShellContent Title="Dashboard" Icon="home.png" ContentTemplate="{DataTemplate views:DashboardPage}" />
        <ShellContent Title="Resume" Icon="resume.png" ContentTemplate="{DataTemplate views:ResumePage}" />
        <ShellContent Title="Jobs" Icon="jobs.png" ContentTemplate="{DataTemplate views:JobSearchPage}" />
        <ShellContent Title="Quiz" Icon="quiz.png" ContentTemplate="{DataTemplate views:QuizPage}" />
        <ShellContent Title="Settings" Icon="settings.png" ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>


